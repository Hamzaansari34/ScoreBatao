   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/login"
    android:orientation="vertical"
    tools:context="com.example.abdull.scorebatao.Activity.StartScreen">
<LinearLayout
android:layout_weight="8"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="50dp"
android:paddingTop="20dp"
android:paddingLeft="24dp"
android:paddingRight="24dp"

    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:layout_marginBottom="24dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/logo"
    />

<EditText
    android:id="@+id/emailIDsignin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/defult"
    android:drawableLeft="@drawable/email"
    android:drawablePadding="10dp"
    android:fontFamily="cursive"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:textColor="@color/defult"
    android:textCursorDrawable="@null" />

<EditText
    android:id="@+id/passwordsignin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/defult"
    android:drawableLeft="@drawable/pass"
    android:drawablePadding="10dp"
    android:fontFamily="cursive"
    android:hint="Password"
    android:inputType="textPassword"
    android:textColor="@color/defult"
    android:textCursorDrawable="@null" />

<Button
    android:id="@+id/loginID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#60000000"
    android:text="LOGIN"
    android:textColor="@color/defult" />
<Button
    android:id="@+id/forget"
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/loginID"
    android:layout_marginLeft="10dp"
    android:elevation="0dp"
    android:paddingLeft="20dp"
    android:text="Forget Password" />
<TextView
    android:fontFamily="cursive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="or"
    android:textSize="15dp"
    android:textColor="@color/defult"
    android:paddingTop="3dp"
    android:textAlignment="center"
    android:paddingBottom="3dp"
    />

<com.facebook.login.widget.LoginButton
    android:id="@+id/login_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0071bc"
    android:drawablePadding="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:textAlignment="viewStart"
    android:textStyle="bold" />
</LinearLayout>
<LinearLayout
android:layout_weight="2"
android:layout_width="match_parent"
android:orientation="horizontal"
android:layout_height="wrap_content">
<TextView
    android:paddingLeft="45dp"
    android:textColor="@color/defult"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:text="Don't have an account yes?"
    />

<Button
    android:id="@+id/createaccount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#50000000"
    android:text="Sign Up"
    android:textAlignment="textStart"
    android:textColor="@color/defult"
    android:textStyle="bold" />
</LinearLayout>


    </LinearLayout>
